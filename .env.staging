# Staging Environment Configuration
NODE_ENV=staging

# Database
DATABASE_URL=postgresql://user:password@db-host:5432/aifm_staging
DB_POOL_SIZE=10
DB_TIMEOUT=5000
LOG_QUERIES=false

# Redis
REDIS_URL=redis://redis-host:6379/1
REDIS_MAX_RETRIES=3
REDIS_TIMEOUT=5000
REDIS_KEY_PREFIX=aifm:staging:

# Authentication (Clerk)
CLERK_SECRET_KEY=sk_test_xxx
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxx

# API Configuration
PORT=3000
NEXT_PUBLIC_API_URL=https://staging.your-domain.com
REQUEST_TIMEOUT=30000
MAX_BODY_SIZE=10mb

# CORS
CORS_ORIGIN=https://staging.your-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=500

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_DIR=/var/log/aifm

# Security
ENABLE_CSRF=true
ENABLE_CORS=true
ENABLE_HSTS=true

# Monitoring (Sentry)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/xxx
SENTRY_TRACES_SAMPLE_RATE=1.0
