# Production Environment Configuration
NODE_ENV=production

# Database
DATABASE_URL=postgresql://user:password@db-host:5432/aifm_prod
DB_POOL_SIZE=20
DB_TIMEOUT=5000
LOG_QUERIES=false

# Redis
REDIS_URL=redis://redis-host:6379/0
REDIS_MAX_RETRIES=3
REDIS_TIMEOUT=5000
REDIS_KEY_PREFIX=aifm:prod:

# Authentication (Clerk)
CLERK_SECRET_KEY=sk_live_xxx
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_live_xxx

# API Configuration
PORT=3000
NEXT_PUBLIC_API_URL=https://your-domain.com
REQUEST_TIMEOUT=30000
MAX_BODY_SIZE=10mb
MAX_JSON_SIZE=10mb

# CORS
CORS_ORIGIN=https://your-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_DIR=/var/log/aifm
LOG_MAX_SIZE=10m
LOG_MAX_FILES=14d

# File Upload
FILE_UPLOAD_MAX_SIZE=10485760
FILE_UPLOAD_DIR=/var/uploads/aifm

# Security
ENABLE_CSRF=true
ENABLE_CORS=true
ENABLE_HSTS=true
HSTS_MAX_AGE=2678400
ENABLE_XSS=true
ENABLE_FRAME_GUARD=true
ENABLE_NO_SNIFF=true

# Monitoring (Sentry)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/xxx
SENTRY_TRACES_SAMPLE_RATE=0.1

# External APIs (if configured)
# FORTNOX_API_KEY=
# NORDIGEN_SECRET_ID=
# NORDIGEN_SECRET_KEY=
